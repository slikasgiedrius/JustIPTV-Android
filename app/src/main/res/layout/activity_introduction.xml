<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.introduction.IntroductionActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="No adds, no fees. Just IPTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.shuhart.stepview.StepView
        android:id="@+id/step_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:sv_doneCircleColor="@android:color/white"
        app:sv_doneCircleRadius="14dp"
        app:sv_doneStepLineColor="@color/primary"
        app:sv_doneStepMarkColor="@color/primary"
        app:sv_doneTextColor="@color/primary"
        app:sv_nextStepLineColor="@color/primary"
        app:sv_nextTextColor="@color/primary"
        app:sv_selectedCircleColor="@android:color/white"
        app:sv_selectedCircleRadius="12dp"
        app:sv_selectedStepNumberColor="@color/primary"
        app:sv_selectedTextColor="@android:color/white"
        app:sv_stepLineWidth="1dp"
        app:sv_stepNumberTextSize="12sp"
        app:sv_stepPadding="4dp"
        app:sv_stepViewStyle="@style/StepView" />

</androidx.constraintlayout.widget.ConstraintLayout>