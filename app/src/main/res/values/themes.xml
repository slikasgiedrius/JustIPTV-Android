<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.NoActionBar" parent="Theme.Main">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FullScreen" parent="Theme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>