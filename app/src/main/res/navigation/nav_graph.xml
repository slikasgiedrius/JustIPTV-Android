<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inputFragment">
    <fragment
        android:id="@+id/inputFragment"
        android:name="com.giedrius.iptv.ui.input.InputFragment"
        android:label="@string/input"
        tools:layout="@layout/input_fragment">
        <action
            android:id="@+id/action_inputFragment_to_channelsFragment"
            app:destination="@id/channelsFragment" />
    </fragment>
    <fragment
        android:id="@+id/channelsFragment"
        android:name="com.giedrius.iptv.ui.channels.ChannelsFragment"
        android:label="@string/channels"
        tools:layout="@layout/channels_fragment">
        <action
            android:id="@+id/action_channelsFragment_to_playerFragment"
            app:destination="@id/playerFragment" />
        <argument
            android:name="url"
            app:argType="string" />
        <action
            android:id="@+id/action_channelsFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
    </fragment>
    <fragment
        android:id="@+id/playerFragment"
        android:name="com.giedrius.iptv.ui.player.PlayerFragment"
        android:label="@string/player"
        tools:layout="@layout/player_fragment">
        <action
            android:id="@+id/action_playerFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.giedrius.iptv.ui.main.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment" />
    <activity
        android:id="@+id/playerActivity"
        android:name="com.giedrius.iptv.ui.player.PlayerActivity"
        android:label="PlayerActivity" />
</navigation>